{
    "name": "stl-server",
    "version": "0.0.1",
    "description": "Server for STL",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "nodemon --exec ts-node src/index.ts",
        "ts.check": "tsc --project tsconfig.json",
        "add-build": "git add dist",
        "build": "rimraf dist && tsc"
    },
    "author": "tgthuan2000",
    "license": "MIT",
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/node": "^18.13.0",
        "nodemon": "^2.0.20",
        "pre-commit": "^1.2.2",
        "rimraf": "^4.1.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "express": "^4.18.2"
    },
    "pre-commit": [
        "ts.check",
        "build",
        "add-build"
    ]
}
